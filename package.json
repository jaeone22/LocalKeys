{
    "name": "localkeys",
    "version": "1.1.1",
    "main": "src/main.js",
    "bin": {
        "localkeys": "./cli/localkeys.js"
    },
    "scripts": {
        "start": "electron .",
        "install-cli": "chmod +x cli/localkeys.js && npm link",
        "build": "electron-builder"
    },
    "author": "PrivateStater",
    "devDependencies": {
        "electron": "^39.1.1",
        "electron-builder": "^24.0.0"
    },
    "build": {
        "appId": "com.localkeys.app",
        "productName": "LocalKeys",
        "directories": {
            "output": "dist"
        },
        "files": [
            "src/**/*",
            "cli/**/*"
        ],
        "mac": {
            "category": "public.app-category.developer-tools",
            "icon": "src/assets/icon.png"
        },
        "win": {
            "target": "nsis",
            "icon": "src/assets/icon.png"
        },
        "linux": {
            "target": "AppImage",
            "icon": "src/assets/icon.png"
        }
    }
}
